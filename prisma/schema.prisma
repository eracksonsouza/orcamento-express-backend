generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum QuoteStatus {
  DRAFT
  SUBMITTED
  GENERATING
  READY
  FAILED
}

model Customer {
  id      String  @id @default(uuid())
  name    String
  email   String?
  phone   String?
  quotes  Quote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
  vehicles Vehicle[]
}

model Quote {
  id         String      @id @default(uuid())
  customerId String
  customer   Customer    @relation(fields: [customerId], references: [id])

  version    Int         @default(1)
  status     QuoteStatus @default(DRAFT)

  // Cached totals (avoid recalculating every time)
  subtotal   Decimal     @default(0)
  discount   Decimal     @default(0)
  taxes      Decimal     @default(0)
  total      Decimal     @default(0)

  items      QuoteItem[]
  files      QuoteFile[]

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // For versioning: reference to parent quote (if this is a new version)
  parentId   String?
  parent     Quote?      @relation("QuoteVersions", fields: [parentId], references: [id])
  versions   Quote[]     @relation("QuoteVersions")

  @@map("quotes")
}

model QuoteItem {
  id          String   @id @default(uuid())
  quoteId     String
  quote       Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  description String
  quantity    Int
  unitPrice   Decimal
  discount    Decimal  @default(0)
  taxes       Decimal  @default(0)

  type        String   // "PART" or "SERVICE"

  @@map("quote_items")
}

model QuoteFile {
  id        String   @id @default(uuid())
  quoteId   String
  quote     Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  version   Int
  fileType  String   // "PDF" or "XLSX"
  url       String   // local path or S3

  createdAt DateTime @default(now())

  @@map("quote_files")
}

model Vehicle {
  id           String   @id @default(uuid())
  customerId   String
  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  brand         String
  model        String
  year         Int
  licensePlate String
  type         String   // "CAR", "MOTORCYCLE", "TRUCK", "VAN", "SUV"

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("vehicles")
}